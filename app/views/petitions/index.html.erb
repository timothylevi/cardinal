<section id="slider">
    <div id="owl-demo" class="owl-carousel owl-theme">
        <% @petitions.each do |petition| %>
            <div class="item">
                <%= image_tag petition.image, width: "80%", heigh: '80%;' %>
                <div id="sliderMenu">
                    <% if petition.category %>
                      <a href="#" class="button"  id="winBtn"><%= petition.category.name if petition.category %></a>
                    <% end %>
                    <a href="<%= petition_url(petition) %>" class="button btn btn-link" id="blagoBtn"><%= petition.title %></a>
                    <%= link_to petition.creator, id: 'userIcon' do %>
                      <%= image_tag petition.creator.image(:thumbnail) %>
                    <% end %>
                    </a>
                    <p id="name"><%= petition.creator.first_name %></p>
                    <p id="surname"><%= petition.creator.last_name %></p>
                    <p id="city"><%= petition.creator.contact.city if petition.creator.contact %></p>
                    <p id="region"><%= petition.creator.contact.state if petition.creator.contact %></p>
                    <p id="followerCounter"><span class="badge"><%= petition.petition_signatures.count %></span></p>
                    <p id="followers">Користувачів</p>
                    <p id="lastActivity">Остання активність</p>
                    <p id="lastActivityMinutes">3 хвилини тому</p>
                </div>
            </div>
        <% end %>
    </div>
</section>

<section id="main">
    <div class="box alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Закрити"><span aria-hidden="true">&times;</span></button>
        <div class="text-center">
            <h2>Громадський сервіс петицій до державних органів України</h2>
            <div class="circle">
                <h3 class="circleText">Створи<br>петицію</h3>
            </div>
            <div class="arrow-box">
                <i class="fa fa-arrow-right"></i>
            </div>
            <div class="circle">
                <h3 class="circleText">Збери<br>підписи</h3>
            </div>
            <div class="arrow-box">
                <i class="fa fa-arrow-right"></i>
            </div>
            <div class="circle">
                <h3 class="circleText">Слідкуй за<br>рішенням</h3>
            </div>
            <div class="arrow-box" style="font-size: 1.5em; vertical-align: middle;">
                <a href="#">Що таке<br>петиції?</a>
            </div>
        </div>
    </div>
</section>

<section id="list main">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <% @petitions.each do |petition| %>
        <div class="panel panel-primary">
          <div class="panel-heading"><%= petition.title %></div>
          <div class="panel-body">
            <%= petition.body %>
            <div style="float: right">
              <div class="btn btn-success"><a style="text-decoration: none; color: white;" href="<%= petition_url(petition) %>">Підтримати</a></div>
            </div>
          </div>
          <div class="panel-footer">
            <small class="text-muted"><%= link_to petition.creator.name, petition.creator %></small>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</section>

